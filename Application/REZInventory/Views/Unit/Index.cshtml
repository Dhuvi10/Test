@model  IEnumerable <REZCores.UnitModel>
@{
    ViewBag.Title = "Index";
}

<section class="content">
    <div id="divEmp">
        <ol class="breadcrumb">
            <li>Master</li>
            <li class="active">Unit</li>
        </ol>
        <h4 class="Cheader">Unit List</h4>
        <style>
            table th, tr {
                text-align: center;
            }
        </style>
        <p>
            <button class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Unit")';return false;">+ Add</button>
            @*<button class="btn btn-primary" id="get-excel">Export to Excel</button>*@
            @*<a id="get-excel" class="btn btn-primary">Get excel</a>*@


        </p>

        <div class="box box-primary">
            <div class="box-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Unit Name
                            </th>
                            <th>
                                Status
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UnitName)
                                </td>                              

                                @if (item.IsActive == true)
                                {
                                    <td>
                                        Active
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        De activate
                                    </td>
                                }
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.UnitId })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

